    }

    @keyframes fadeIn {
      from {opacity: 0; transform: translateY(15px);}
      to {opacity: 1; transform: translateY(0);}
    }

    form {
      margin-bottom: 2rem;
      max-width: 600px;
    }

    input,
    select,
    textarea {
      display: block;
      margin-bottom: 1rem;
